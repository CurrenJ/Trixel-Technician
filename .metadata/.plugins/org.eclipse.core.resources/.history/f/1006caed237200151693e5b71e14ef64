package com.saucypixelstudios.trixeltechnician.trixels;

import java.awt.Point;

public class Trixel {
	private double scale;
	private int direction;
	private int x;
	private int y;
	private Point[] vertices;

	public Trixel(double scale, int direction, int x, int y){
		this.scale = scale;
		this.direction = direction;
		this.x = x;
		this.y = y;
		vertices = new Point[3];
		generatePoints();
	}
	
	public void generatePoints(){
		if(direction == TrixelDirectionMap.RIGHT){
			vertices[0] = new Point(x, y);
			vertices[1] = new Point(x, (int) (y + TrixelBaseSideLength.LENGTH * scale));
			vertices[2] = new Point(x + TrixelBaseSideLength.getMedian(), (int) (y + TrixelBaseSideLength.LENGTH * scale * 0.5));
		}
	}
}
