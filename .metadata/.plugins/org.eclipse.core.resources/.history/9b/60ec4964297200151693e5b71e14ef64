package com.saucypixelstudios.trixeltechnician.trixels;

import java.awt.Graphics;
import java.awt.Point;

public class Trixel {
	private double scale;
	private int direction;
	private int x;
	private int y;
	private int[] xPoints;
	private int[] yPoints;

	public Trixel(double scale, int direction, int x, int y){
		this.scale = scale;
		this.direction = direction;
		this.x = x;
		this.y = y;
		xPoints = new int[3];
		yPoints = new int[3];
		generatePoints();
	}
	
	public void generatePoints(){
		if(direction == TrixelDirectionMap.RIGHT){
			xPoints[0] = x;
			yPoints[0] = y;
			
			xPoints[1] = x;
			yPoints[1] = (int) (y + TrixelBaseSideLength.LENGTH * scale);
			
			xPoints[2] = x + TrixelBaseSideLength.getMedian();
			yPoints[2] = (int) (y + TrixelBaseSideLength.LENGTH * scale * 0.5);
		}
	}

	public void drawTrixel(Graphics g) {
		g.drawPolygon(xPoints, yPoints, 3);
	}
}
